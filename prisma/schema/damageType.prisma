model DamageType {
  id        String @id @default(uuid())
  name      String
  baseType  BaseDamageType
  projectId String

  project Project @relation(fields: [projectId], references: [id])

  displayOrder Int      @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum BaseDamageType {
  Physical
  Magical
  Chemical
  Environmental
}